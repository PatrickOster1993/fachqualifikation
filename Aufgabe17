import random

zahl = random.randint(1, 100)

versuch = int(input("Gib eine Zahl ein: "))



produkte = [['Laptop', 1200], ['Smartphone', 800], ['Tablet', 500], ['Monitor', 300], ['Maus', 50]]
zuletzt_aufsteigend = True

def produkte_unsortiert(ascending):
    for i in range(len(produkte) - 1):
        if ascending and produkte[i][1] > produkte[i + 1][1]:
            return True
        elif not ascending and produkte[i][1] < produkte[i + 1][1]:
            return True
    return False

def sort_products(ascending=True):
    global zuletzt_aufsteigend
    if not produkte_unsortiert(ascending):
        print("Liste ist bereits sortiert!")
        return
    
    n = len(produkte)
    for i in range(n):
        swapped = False
        for j in range(n - i - 1):
            if (ascending and produkte[j][1] > produkte[j + 1][1]) or \
               (not ascending and produkte[j][1] < produkte[j + 1][1]):
                produkte[j], produkte[j + 1] = produkte[j + 1], produkte[j]
                swapped = True
        if not swapped:
            break

    zuletzt_aufsteigend = ascending

def produkt_in_liste(produktname):
    for produkt in produkte:
        if produkt[0].lower() == produktname.lower():
            print(f"Produkt {produktname} kostet {produkt[1]} €!")
            return
    print(f"{produktname} ist nicht in der Liste enthalten!")

def add_product(name, preis):
    global zuletzt_aufsteigend
    produkte.append([name, preis])
    sort_products(zuletzt_aufsteigend)

# Tests
print("####### Unsortierte Liste #######")
print(produkte)

print("####### Aufsteigend sortierte Liste #######")
sort_products(ascending=True)
print(produkte)

print("####### Absteigend sortierte Liste #######")
sort_products(ascending=False)
print(produkte)

print("####### Überprüfen, ob Produkt in Liste #######")
produkt_in_liste('Smartphone')
produkt_in_liste('iPhone')

print("####### Produkt hinzufügen #######")
add_product('iPhone', 700)
produkt_in_liste('iPhone')
print(produkte)
